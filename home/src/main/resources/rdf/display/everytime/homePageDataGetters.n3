@prefix foaf: <http://xmlns.com/foaf/0.1/> .

# academic departments datagetter

<freemarker:lib-home-page.ftl> display:hasDataGetter display:academicDeptsDataGetter .

display:academicDeptsDataGetter
    a <java:edu.cornell.mannlib.vitro.webapp.utils.dataGetter.SparqlQueryDataGetter> ;
    display:saveToVar "academicDeptDG" ;
    display:query """
    PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
    PREFIX vivo: <http://vivoweb.org/ontology/core#>
    PREFIX ehess:    <http://data.ehess.fr/ontology/vivo#>

    SELECT DISTINCT ?theURI (COALESCE(str(?label_fr), str(?label_en)) as ?name_fr) (COALESCE(str(?label_en), str(?label_fr)) as ?name_en)
        WHERE
            {
                  ?theURI a ehess:UniteDeRecherche .
                  ?theURI rdfs:label ?label_fr
                  FILTER (lang(?label_fr) = 'fr')
                  ?theURI a ehess:UniteDeRecherche .
         OPTIONAL
            {
                  ?theURI rdfs:label ?label_en
                   FILTER (lang(?label_en) = 'en')
            }
       }
    
    """ .

